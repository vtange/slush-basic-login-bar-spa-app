    <div class="navbar navbar-default">
		<div class="container-fluid">
			<script src="acct-manage/userService.js"></script>
			<script src="acct-manage/header.js"></script>
				  <div id="header" style="display:flex; align-items:center; justify-content:space-around;" data-ng-controller="LoginCtrl">
					    <div id="group1">
        					<a href="/"><h1><%= title %></h1></a>
					  	</div>
					  	<div id="group2">
							<div class="btn-toolbar">
								<% if (!user) { %>
								<div id="login-buttons" data-ng-if="!(user)">
									<div data-ng-click="toggleLogin()" class="btn btn-default"><span class="fa fa-user"></span> Local Login</div>
									<a href="/users/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a>
									<div style="position:absolute; background-color:#f8f8f8; border:1px solid #e7e7e7; padding:10px; border-radius:10px;z-index:5" data-ng-if="showLogin">
										<form data-ng-submit="login()">
											<p style="background-color:salmon;color:white;padding-left:5px;border-radius:3px;"data-ng-if="message">{{message}}</p>
											<div class="form-group">
												<input type="text" class="form-control" name="email" placeholder="Email" data-ng-model="info.email" required>
											</div>
											<div class="form-group">
												<input type="password" class="form-control" name="password" placeholder="Password" data-ng-model="info.password" required>
											</div>
											<button class="btn btn-warning" type="submit">Login</button>
										</form>
									</div>
								</div>
								<a href="/users/profile" class="btn btn-default" data-ng-if="user"><span class="fa fa-user" data-ng-if="!(user.avatar)"></span><img data-ng-if="user.avatar" style="max-height:30px;"  onError="this.onerror=null; this.src='../images/novatar.png'" data-ng-src="{{user.avatar}}"> {{user.username}}</a>
								<% } else {%>
								<a href="/users/profile" class="btn btn-default"><span data-ng-init="package = <%= packagedUser %>;autologUser(package)"></span>
										<img style="max-height:30px;" src="<%= user.local.avatarURL %>" onError="this.onerror=null; this.src='../images/novatar.png'"/>
										<%= user.local.username %></a>
								<% } %>
							</div>
					    </div>
				  </div>
		</div>
    </div>